  <%= simple_form_for(@flat) do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name  %>
    <%= f.label :address  %>
    <%= f.text_field :address  %>
    <%= f.label :description  %>
    <%= f.text_field :description  %>
    <%= f.input :source %>
    <%= f.input :price_per_night  %>
    <%= f.input :number_of_guest, collection: Flat::NUMBER_OF_GUEST %>
    <%= f.submit "Create flat", class: 'btn btn-success'  %>
  <% end %>
