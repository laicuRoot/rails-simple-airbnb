<div class="map" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1> <%= @flat.name  %> </h1>
        <h3 class="text-secondary"> <%= @flat.address %> </h3>
      </div>
      <div class="flat-show-card">
        <h2> Description: </h2>
        <p class="text-bold"> <%= @flat.description %> </p>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this flat!</h5>
        <form action="">
          <div class="form-group row">
            <label for="date" class="col-sm-2 col-form-label">From:</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" id="date" value="12/10/22">
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-sm-2 col-form-label">to:</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" id="date" value="19/10/22">
            </div>
          </div>
          <button type="book now!" class="btn btn-success">Book now!</button>
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex">
          <div class="d-flex mr-2">
            <i class="fas fa-user-friends"></i>
            <p class="ml-1"><%= @flat.number_of_guest %></p>
          </div>
          <div class="d-flex">
            <i class="fas fa-money-bill"></i>
            <p class="ml-1"><%= @flat.price_per_night %></p>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="d-flex">
          <h5 class="mr-2">Share: </h5>
          <i class="fab fa-instagram mr-2 fa-lg"></i>
          <i class="fab fa-facebook fa-lg"></i>
        </div>
      </div>
    </div>
  </div>
</div>
